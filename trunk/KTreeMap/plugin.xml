<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.jense.ktreemap"
            name="KTreeMap"/>
      <view
            category="org.jense.ktreemap"
            class="org.jense.ktreemap.example.KTreeMapView"
            icon="icons/ktreemap.gif"
            id="org.jense.ktreemap.example.KTreeMapView"
            name="KTreeMap View"/>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="org.jense.ktreemap.example.KTreeMapView"
               ratio="0.5"
               relationship="right"
               relative="org.eclipse.ui.views.TaskList"/>
      </perspectiveExtension>
   </extension>

</plugin>
