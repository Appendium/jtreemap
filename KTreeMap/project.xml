<project>
   <extend>../common-build/project.xml</extend>
   <name>KTreeMap</name>
   <artifactId>ktreemap</artifactId>
   <package>org.jense.ktreemap</package>
   <shortDescription>KTreeMap is a Java SWT component which reprensents hierarchical structure in a Treemap.</shortDescription>
   <description>
       KTreeMap is a Java SWT component which represents hierarchical structure in a Treemap
   </description>
   <repository>
      <connection>
         scm:svn:https://svn.sourceforge.net/svnroot/jtreemap/trunk/KTreeMap
      </connection>
      <developerConnection>
         scm:svn:https://svn.sourceforge.net/svnroot/jtreemap/trunk/KTreeMap
      </developerConnection>
   </repository>
   <dependencies>
     <dependency>
         <groupId>swt</groupId>
         <artifactId>swt-win32</artifactId>
         <version>2.1.0</version>
         <type>jar</type>
      </dependency>
     <dependency>
         <groupId>swt</groupId>
         <artifactId>jface</artifactId>
         <version>3.0.1</version>
         <type>jar</type>
      </dependency>
     <dependency>
         <groupId>eclipse</groupId>
         <artifactId>eclipse-workbench</artifactId>
         <version>2.1.0</version>
         <type>jar</type>
      </dependency>
     <dependency>
         <groupId>eclipse</groupId>
         <artifactId>eclipse-runtime</artifactId>
         <version>2.1.0</version>
         <type>jar</type>
      </dependency>
   </dependencies>

   <build>
      <sourceDirectory>src/main/java</sourceDirectory>
      <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
      <unitTest>
         <includes>
            <include>**/*Test.java</include>
         </includes>
         <excludes>
            <exclude>**/Abstract*.java</exclude>
         </excludes>
      </unitTest>
      <resources>
         <resource>
            <directory>src/main/java</directory>
            <includes>
               <include>**/*.dtd</include>
            </includes>
            <filtering>false</filtering>
         </resource>
      </resources>
   </build>

</project>
